{
  "$schema": "https://raw.githubusercontent.com/wix/Detox/master/src/schemas/DetoxConfig.js.flow",
  "testRunner": {
    "args": {
      "$0": "jest",
      "config": "e2e/storybook/jest.config.js"
    },
    "jest": {
      "setupTimeout": 180000
    }
  },
  "apps": {
    "android.debug.storybook": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/debug/app-x86_64-debug.apk",
      "build": "cd android && ./gradlew assembleDebug -PjsBundleFile=index.js -x lint --no-daemon",
      "reversePorts": [9001]
    }
  },
  "devices": {
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_API_34"
      }
    }
  },
  "configurations": {
    "android.emu.storybook": {
      "device": "emulator",
      "app": "android.debug.storybook"
    }
  }
}
